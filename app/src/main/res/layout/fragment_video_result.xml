<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.videoresult.VideoResultFragment">

    <data>
        <variable
            name="interViewer"
            type="com.muffinmanz.muff_secretphone.data.model.VideoListModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_bg_color"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_close"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/interview_video_shoot"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/notosanscjkkrbold"
                android:includeFontPadding="false" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#AEAEAE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingVertical="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/a101" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/solid_white_stroke_1dp_gray">

                        <TextView
                            android:id="@+id/tv_off_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/solid_darkblue_stroke_1dp_gray"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@string/temp_num"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_off_number_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@{interViewer.offNumber}"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="A101" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/solid_white_stroke_1dp_gray">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/solid_darkblue_stroke_1dp_gray"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@string/name"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_name_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@{interViewer.name}"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="Chinh Chantay Chath" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/solid_white_stroke_1dp_gray">

                        <TextView
                            android:id="@+id/tv_korea_exam_num"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/solid_darkblue_stroke_1dp_gray"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@string/korea_exam_num"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_korea_exam_num_info"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:text="@{interViewer.examNo}"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="0152021C51010282" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                app:show_buffering="when_playing"
                app:show_shuffle_button="true"
                app:show_subtitle_button="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_shoot_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"
                    android:background="#071D65"
                    android:text="@string/reshoot"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_shoot_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0070BF"
                    android:text="@string/complete_shoot"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>