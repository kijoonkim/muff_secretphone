<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:layout_gravity="center"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/header_bg_color"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp">

                <ImageButton
                    android:id="@+id/btn_content_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_grey"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_mode"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/notosanscjkkrbold"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true" />

                <ImageButton
                    android:id="@+id/btn_content_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_close_white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#AEAEAE" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="70dp"
                android:paddingVertical="30dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_solid_lightgray_stroke_5dp_darkgray">

                    <TextView
                        android:id="@+id/tv_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_ip_setting"
                        android:textSize="20sp"
                        android:fontFamily="@font/notosanscjkkrbold"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="25dp"
                        android:paddingHorizontal="17dp"
                        android:paddingVertical="5dp"
                        android:background="@drawable/rounded_solid_darkgray_5dp"
                        android:textColor="@color/white"
                        android:includeFontPadding="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_ip_host"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ip_setting_host"
                            android:textSize="20sp"
                            android:textColor="@color/black_effective"
                            android:fontFamily="@font/notosanscjkkrbold"
                            android:includeFontPadding="false" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ip_info1"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/black_effective"
                            android:fontFamily="@font/notosanscjkkrbold"
                            android:inputType="number"
                            android:maxLength="3"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/rounded_solid_white_stroke_1dp_black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dot"
                            android:textSize="20sp"
                            android:textColor="@color/black_effective"
                            android:fontFamily="@font/notosanscjkkrbold"
                            android:includeFontPadding="false" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ip_info"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/black_effective"
                            android:fontFamily="@font/notosanscjkkrbold"
                            android:inputType="number"
                            android:maxLength="3"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/rounded_solid_white_stroke_1dp_black" />

                        <TextView
                            android:id="@+id/tv_ip_port"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkrbold"
                            android:includeFontPadding="false"
                            android:textSize="20sp"
                            android:text="@string/ip_setting_port"
                            android:textColor="@color/black_effective"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/line_dotted_black"
                    android:layerType="software" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_solid_lightgray_stroke_5dp_blue"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_hq_sync"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_solid_lightgray_stroke_5dp_blue"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/hq_server_sync"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hq_sync_log"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/line_dotted_black"
                    android:layerType="software" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_solid_lightgray_stroke_5dp_orange"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_result_sync"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_solid_lightgray_stroke_5dp_orange"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/sync_attendance_result"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_result_sync_log"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_apk_sync"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                    android:fontFamily="@font/notosanscjkkrregular"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:paddingStart="20dp"
                    android:text="APK 동기화"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/btn_result_sync"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_video_sync"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                    android:fontFamily="@font/notosanscjkkrregular"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:paddingStart="20dp"
                    android:text="영상파일 동기화"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/btn_result_sync"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_etc"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/gray"
                    android:fontFamily="@font/notosanscjkkrbold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="기타 설정"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/btn_video_sync" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delete_history"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                    android:fontFamily="@font/notosanscjkkrregular"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:paddingStart="20dp"
                    android:text="@string/delete_history"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_etc"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_data_update"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                    android:fontFamily="@font/notosanscjkkrregular"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:paddingStart="20dp"
                    android:text="@string/db_update"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/btn_apk_sync"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>