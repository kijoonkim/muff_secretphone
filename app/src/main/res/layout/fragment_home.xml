<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <data>
        <variable
            name="vm"
            type="com.muffinmanz.muff_secretphone.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="15dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_guide_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_guide_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ci_hrdk"
            android:adjustViewBounds="true"
            android:paddingVertical="7dp"
            app:layout_constraintStart_toStartOf="@id/v_guide_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_exam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.fetchOprnTitle}"
            android:textColor="#404040"
            android:textSize="15sp"
            android:fontFamily="@font/notosanscjkkrbold"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp"
            android:paddingVertical="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020 제 1회 외국인력 선발포인트제 기능시험" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.fetchOprnTmeDts}"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/notosanscjkkrbold"
            android:includeFontPadding="false"
            android:background="@drawable/rounded_solid_darkgray_5dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_exam_title"
            app:layout_constraintStart_toEndOf="@+id/tv_exam_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/b_barrier_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="13dp"
            app:constraint_referenced_ids="iv_logo, tv_exam_title" />

        <TextView
            android:id="@+id/tv_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_time"
            android:textColor="#0070BF"
            android:textSize="17sp"
            android:fontFamily="@font/notosanscjkkrbold"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@+id/v_guide_1"
            app:layout_constraintTop_toTopOf="@+id/b_barrier_1" />

        <TextClock
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:format12Hour="yyyy년 MM월 dd일 HH:mm"
            android:textColor="#0070BF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tv_time_info"
            app:layout_constraintTop_toTopOf="@+id/b_barrier_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_info"
            tools:text="2020년 4월 20일 08:01" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/b_barrier_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="10dp"
            app:constraint_referenced_ids="tv_time_info, tv_current_time" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetTop="0dp"
            android:text="@string/logout"
            android:textColor="#404040"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintBottom_toBottomOf="@+id/b_barrier_2"
            app:layout_constraintEnd_toEndOf="@+id/v_guide_2"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#595959"
            app:strokeWidth="2dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:background="@drawable/rect_solid_gray_corners_1_stroke_2_gray"
            app:layout_constraintTop_toTopOf="@+id/b_barrier_2">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_inner_guide_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_inner_guide_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <Spinner
                android:id="@+id/spinner_sectors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2.5dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                android:fontFamily="@font/notosanscjkkrregular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="@+id/v_inner_guide_1"
                app:layout_constraintEnd_toStartOf="@+id/spinner_details"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1" />

            <Spinner
                android:id="@+id/spinner_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2.5dp"
                android:paddingVertical="2dp"
                android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                android:fontFamily="@font/notosanscjkkrregular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:inputType="text"
                app:layout_constraintStart_toEndOf="@+id/spinner_sectors"
                app:layout_constraintEnd_toEndOf="@+id/v_inner_guide_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_off_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2.5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                android:textSize="18sp"
                android:hint="@string/temp_num"
                android:paddingStart="10dp"
                android:fontFamily="@font/notosanscjkkrregular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="@id/v_inner_guide_1"
                app:layout_constraintTop_toBottomOf="@+id/spinner_sectors"
                app:layout_constraintEnd_toStartOf="@+id/et_birth"
                app:layout_constraintHorizontal_weight="0.25" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2.5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                android:textSize="18sp"
                android:hint="생년월일"
                android:paddingStart="10dp"
                android:fontFamily="@font/notosanscjkkrregular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:inputType="text"
                app:layout_constraintStart_toEndOf="@+id/et_off_number"
                app:layout_constraintTop_toBottomOf="@+id/spinner_sectors"
                app:layout_constraintEnd_toStartOf="@+id/et_name"
                app:layout_constraintHorizontal_weight="0.25" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2.5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rect_solid_white_corner_05_stroke_1_lightgray"
                android:textSize="18sp"
                android:hint="@string/name"
                android:paddingStart="10dp"
                android:fontFamily="@font/notosanscjkkrregular"
                android:includeFontPadding="false"
                android:gravity=""
                android:maxLines="1"
                android:inputType="text"
                app:layout_constraintStart_toEndOf="@+id/et_birth"
                app:layout_constraintTop_toBottomOf="@+id/spinner_details"
                app:layout_constraintEnd_toStartOf="@+id/btn_search"
                app:layout_constraintHorizontal_weight="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="2.5dp"
                android:gravity="center"
                android:background="#137FD2"
                android:foreground="?attr/selectableItemBackground"
                android:fontFamily="@font/notosanscjkkrbold"
                android:includeFontPadding="false"
                android:text="@string/search"
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/et_name"
                app:layout_constraintTop_toTopOf="@+id/et_name"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintEnd_toEndOf="@id/v_inner_guide_2"
                app:layout_constraintHorizontal_weight="0.15" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#343D47"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/cl_search_info">

            <TextView
                android:id="@+id/search_area"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:fontFamily="@font/notosanscjkkrregular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="검색영역 접기"
                android:textColor="#fff"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_search_info"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_triangle_up_white" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_search_info">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_inner_guide_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_inner_guide_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <LinearLayout
                android:id="@+id/ll_content_title"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/v_inner_guide_4"
                app:layout_constraintStart_toStartOf="@id/v_inner_guide_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_solid_gray_stroke_1_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrregular"
                        android:gravity="center|end"
                        android:includeFontPadding="false"
                        android:paddingEnd="15dp"
                        android:text="@string/receipt"
                        android:textColor="#252525"
                        android:textSize="20sp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrbold"
                        android:gravity="center|start"
                        android:includeFontPadding="false"
                        android:paddingStart="15dp"
                        android:text="@{vm.fetchRcptCount}"
                        android:textColor="#003586"
                        android:textSize="23sp"
                        tools:ignore="RtlSymmetry"
                        tools:text="0명" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_solid_gray_stroke_1_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrregular"
                        android:gravity="center|end"
                        android:includeFontPadding="false"
                        android:paddingEnd="15dp"
                        android:text="@string/apply_exam"
                        android:textColor="#252525"
                        android:textSize="20sp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_enrollment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrbold"
                        android:gravity="center|start"
                        android:includeFontPadding="false"
                        android:paddingStart="15dp"
                        android:text="@{vm.fetchAplyCount}"
                        android:textColor="#00A0E9"
                        android:textSize="23sp"
                        tools:ignore="RtlSymmetry"
                        tools:text="0명" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_solid_gray_stroke_1_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrregular"
                        android:gravity="center|end"
                        android:includeFontPadding="false"
                        android:paddingEnd="15dp"
                        android:text="@string/ending"
                        android:textColor="#252525"
                        android:textSize="20sp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_absent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanscjkkrbold"
                        android:gravity="center|start"
                        android:includeFontPadding="false"
                        android:paddingStart="15dp"
                        android:text="@{vm.fetchAbsentCount}"
                        android:textColor="#AE1919"
                        android:textSize="23sp"
                        tools:ignore="RtlSymmetry"
                        tools:text="0명" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content_info"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="#616E74"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/v_inner_guide_4"
                app:layout_constraintStart_toStartOf="@id/v_inner_guide_3"
                app:layout_constraintTop_toBottomOf="@+id/ll_content_title">

                <TextView
                    android:id="@+id/tv_table_picture"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/photo"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/sectors"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/details"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/temp_num"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/sex"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/birth"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/name"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/apply_chk"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/v_inner_guide_4"
                app:layout_constraintStart_toStartOf="@id/v_inner_guide_3"
                app:layout_constraintTop_toBottomOf="@id/ll_content_info"
                tools:itemCount="13" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>